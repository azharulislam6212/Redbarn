{%- assign full_width = section.settings.full_width -%}

{%- assign collection = collections[section.settings.collection] -%}
<style>padding-top:5%</style>
<div data-rebuy-id="49733"></div>

{% comment %}

{% if collection == empty %}
{%- assign section_onboarding = true -%}
{% else %}
{%- assign section_onboarding = false -%}
{% endif %}

{% if section.settings.use_background_img and section.settings.background_img != blank %}
{%- assign img_src = section.settings.background_img -%}
{% include 'image-background-src' %}
{%- assign img_size = '1x' -%}
{% endif %}

<div data-section-id="{{ section.id }}" 
     data-section-type="home-collection" 
     class="{% if full_width and section.settings.include_color != 'color-none' %}background-colored {{ section.settings.include_color }} {% if section.settings.title != blank or section.settings.sub_title != blank or section.settings.use_background_img %}colored-bottom{% else %}colored-top-bottom{% endif %} {% endif %}{% if section.settings.include_color == 'color-none' %}{% if section.settings.title != blank or section.settings.sub_title != blank or section.settings.use_background_img %}margins-bottom-section{% else %}margins-section{% endif %} {% endif %}{% if settings.animation_enable %}animate-section-div {% endif %}clearfix">

  {% if section.settings.title != blank or section.settings.sub_title != blank or section.settings.use_background_img %}
  <div class="{% if full_width %}{% if section.settings.use_background_img and section.settings.background_img == blank %}placeholder-svg-background {% endif %}background-cover lazyload {% if section.settings.use_background_img %}bottompad {% endif %}{% endif %}{% if section.settings.font_color and section.settings.include_color != 'color-none' or section.settings.use_background_img %}white {% endif %}clearfix"
       {% if full_width and section.settings.use_background_img and section.settings.background_img != blank %} 
       data-bgset="{{ image_data | strip }}"
       data-sizes="auto"
       style="background:url(data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7) center center no-repeat;"
       {% endif %}>
    {% if full_width and section.settings.use_background_img and section.settings.background_img != blank %}
    <noscript>
      <div class="no-js-bg background-cover content-height-{{ section.id }}" style="background:url({{ img_src | img_url: '1900x' }}) center center no-repeat;"></div>
    </noscript>
    {% endif %}
    <div{% if full_width and section.settings.use_background_img %} class="background-overlay background-overlay-{{ section.id }}"{% endif %}>
      <div class="container clearfix">
        <div{% unless full_width %}{% if section.settings.use_background_img or section.settings.include_color != 'color-none' %} class="twelve"{% endif %}{% endunless %}>
          <div{% if full_width == false and section.settings.include_color != 'color-none' %} class="tab-body background-colored {{ section.settings.include_color }} {% unless section.settings.use_background_img %}{% if full_width == false %} twelve{% endif %}{% endunless %}"{% endif %}>
            <div class="{% if full_width == false %}{% if section.settings.use_background_img %}background-cover lazyload {% endif %}{% if section.settings.use_background_img and section.settings.background_img == blank %}placeholder-svg-background {% endif %}{% if section.settings.use_background_img %}bottompad {% endif %}{% endif %} clearfix"
                 {% if full_width == false and section.settings.use_background_img and section.settings.background_img != blank %} 
                 data-bgset="{{ image_data | strip }}"
                 data-sizes="auto"
                 style="background:url(data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7) center center no-repeat;"
                 {% endif %}>
              {% if full_width == false and section.settings.use_background_img and section.settings.background_img != blank %}
              <noscript>
                <div class="no-js-bg background-cover content-height-{{ section.id }}" style="background:url({{ img_src | img_url: '1200x' }}) center center no-repeat;"></div>
              </noscript>
              {% endif %}
              <div class="table content-height-{{ section.id }}{% if full_width == false and section.settings.use_background_img %} twelve background-overlay background-overlay-{{ section.id }}{% endif %}">
                {% if section.settings.title != blank or section.settings.sub_title != blank %}
                <div class="table-cell"> 
                  <div class="twelve {{ section.settings.text_alignment }}">
                    {% if section.settings.title != blank%}<h3>{{ section.settings.title | escape }}</h3>{% endif %}
                    {% if section.settings.sub_title != blank %}<h3>{{ section.settings.sub_title | escape }}</h3>{% endif %}
                  </div>
                </div>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>  
  {% endif %}

  <div class="container{% if full_width %}{% if section.settings.use_slider and collection.products.size > 3 or section_onboarding %} no-pad{% else %} grid{% endif %}{% endif %}{% if settings.animation_enable %} animate-section animate-section-margin load{% endif %} clearfix">
    <div{% unless full_width %}{% if section.settings.include_color != 'color-none' %} class="twelve"{% endif %}{% endunless %}>  
      <div class="tab-body{% if settings.badge_enable %} tab-body-badge{% endif %}{% if full_width == false and section.settings.include_color != 'color-none' %} background-colored {{ section.settings.include_color }} {% if section_onboarding or section.settings.title != blank or section.settings.sub_title != blank or section.settings.use_background_img %}colored-bottom{% else %}colored-top-bottom{% endif %}{% unless section.settings.use_slider and collection.products.size > 3 or section_onboarding %} twelve{% if collection.products.size > 2 or section_onboarding %} grid{% endif %}{% endunless %}{% elsif full_width == false and collection.products.size > 2 or section_onboarding %}{% if section.settings.use_slider and collection.products.size > 3 or section_onboarding %} twelve{% else %} plus-grid{% endif %}{% elsif full_width and collection.products.size < 3 and section_onboarding == false %} plus-grid{% endif %}">
        <div data-section-id="{{ section.id }}" class="{% if collection.products.size > 2 or section_onboarding %}swiper-container {% if section.settings.use_slider and collection.products.size > 3 or section_onboarding %}plus-slider {% elsif collection.products.size > 2 or section_onboarding %}plus-slider-grid {% endif %}{% endif %}product-loop{% if collection.products.size < 3 %} center twelve swiper-product{% endif %} {{ section.settings.sub_text_alignment }}"{% if collection.products.size > 2 or section_onboarding %} id="swiper-carousel-{{ section.id }}{% unless section.settings.use_slider and collection.products.size > 3 or section_onboarding %}-grid{% endunless %}"{% endif %}>
          {% if collection.products.size > 2 or section_onboarding %}<div class="swiper-wrapper swiper-wrapper-{{ section.id }}{% if collection.products.size < 5 and section_onboarding == false %} swiper-center{% endif %}{% unless section.settings.use_slider and collection.products.size > 3 or section_onboarding %} flex-wrap{% endunless %}">{% endif %}
          {% unless section_onboarding %}
          {% for product in collection.products limit: section.settings.product_limit %}
          {%- assign cycleIndex = collection.handle -%}
          {% include 'product-loop' %}
          {% endfor %}
          {% else %}
          {%- capture number -%}{% if section.settings.use_slider %}6{% else %}{{ section.settings.product_limit }}{% endif %}{%- endcapture -%}
          {% for i in (1..number) limit: section.settings.product_limit %}
          {%- capture current -%}{% cycle 1, 2, 3, 4, 5, 6 %}{%- endcapture -%}
          <div class="product animate {% if settings.borders_enable %} borders{% endif %} swiper-slide{% if section.settings.use_slider %} three {% else %} two-half{% cycle current_cycle: ' first', '', '', '', '' %} animate-loop-{{ forloop.index0 }}{% endif %}">
            <div class="product-border{% if settings.borders_enable and section.settings.include_color != 'color-none' %} product-border-background{% endif %}">
              <div class="product-thumb">
                {{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
              <div class="product-details">
                <div class="product-title">        
                  <h5>
                    {{ 'homepage.onboarding.product_title' | t }}
                  </h5>
                </div>    
                <div class="product-price">
                  <h6>{{ 1999 | money }} | <del>{{ 2499 | money }}</del></h6>
                </div>
                {% if settings.quick_view_enable %}<div><span class="btn auto-width">{{ 'products.general.quick' | t }}</span></div>{% endif %}
              </div>
            </div>

          </div>
          {% endfor %}
          {% endunless %}
          {% if collection.products.size > 2 or section_onboarding %}</div>{% endif %}
          {% if collection.products.size > 2 or section_onboarding %}
          <div id="swiper-pagination-{{ section.id }}" class="swiper-pagination relative hidden">
            <div id="swiper-button-prev-{{ section.id }}" class="swiper-button-prev icon icon-chevron-left" role="button" aria-label="{{ 'products.general.previous' | t }}"></div>
            <div id="swiper-button-next-{{ section.id }}" class="swiper-button-next icon icon-chevron-right" role="button" aria-label="{{ 'products.general.next' | t }}"></div>
          </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>

</div>

<style>
  .content-height-{{ section.id }}{height:{{ section.settings.padding }}vh;{% if settings.badge_enable %}margin-bottom:-10px;{% endif %}min-height:{{ section.settings.padding }}vh}
  {% if section.settings.background_img_overlay != blank %}{%- assign alpha = section.settings.background_img_overlay_opacity | times: 0.01 -%}.background-overlay-{{ section.id }}{background:{{ section.settings.background_img_overlay |  color_modify: 'alpha', alpha }};}{% endif %}
</style>

{% endcomment %}

{% schema %}
  {
    "name": "Featured collection",
    "settings": [
      {
        "type": "header",
        "content": "Banner"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
		"default": "Featured collection"
      },
      {
        "type": "text",
        "id": "sub_title",
        "label": "Subheading",
		"default": "Highlight a popular product collection"
      },
      {
        "type": "select",
        "id": "text_alignment",
        "label": "Alignment",
        "default": "text-center",
        "options": [
          {
            "value": "text-left",
            "label": "Left"
          },
          {
            "value": "text-center",
            "label": "Center"
          },
          {
            "value": "text-right",
            "label": "Right"
          }
        ]
      },
      {
        "type": "image_picker",
        "id": "background_img",
        "label": "Image",
        "info": "1900px recommended"
      },
      {
        "type": "checkbox",
        "id": "use_background_img",
        "label": "Show image",
        "default": true
      }, 
      {
        "type": "checkbox",
        "id": "font_color",
        "label": "White text",
        "default": true
      },
	  {
       "type": "checkbox",
       "id": "full_width",
       "label": "Full width",
       "default": true
      },
      {
        "type": "range",
        "id": "padding",
        "min": 5,
        "max": 100,
        "step": 5,
        "unit": "%",
        "label": "Height",
        "default": 25
      },
	  {
        "type": "color",
        "id": "background_img_overlay",
        "label": "Overlay"
      },
      {
        "type": "range",
        "id": "background_img_overlay_opacity",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "%",
        "label": "Opacity",
        "default": 0
      },
	  {
        "type": "select",
        "id": "include_color",
        "label": "Background color",
        "default": "color-none",
        "options": [
          {
            "value": "color-primary",
            "label": "Primary"
          },
          {
            "value": "color-secondary",
            "label": "Secondary"
          },
          {
            "value": "color-none",
            "label": "None"
          }
        ]
      },
      {
        "type": "header",
        "content": "Options"
      },
      {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      },
      {
        "type": "range",
        "id": "product_limit",
        "min": 5,
        "max": 15,
        "step": 5,
        "label": "Products per collection",
        "default": 10
      },
      {
        "type": "checkbox",
        "id": "use_slider",
        "label": "Use slider for products",
        "default": true
      },
      {
        "type": "select",
        "id": "sub_text_alignment",
        "label": "Alignment",
        "default": "text-left",
        "options": [
          {
            "value": "text-left",
            "label": "Left"
          },
          {
            "value": "text-center",
            "label": "Center"
          },
          {
            "value": "text-right",
            "label": "Right"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Featured collection",
        "category": "Collection"
      }
    ]
  }
{% endschema %}