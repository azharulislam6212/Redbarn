{{ 'section-featured-collection.css' | asset_url | stylesheet_tag }}
{{ 'product-card.css' | asset_url | stylesheet_tag }}



<section class="featured-collection-wrapper {% if section.settings.slider_enable %} featured-collection__enable{% endif %}">
  <div class="container">

    {% if section.settings.heading %}
      <h2 class="featured-collection__heading">{{ section.settings.heading }}</h2>

    {% endif %}

    <div class="featured-collection__list   {% if section.settings.slider_enable %} featured-collection__slider  {% endif %}">
        {% liquid
            assign collection_handle = section.settings.collection_handle 
            assign products_to_show = section.settings.products_to_show

         
            %}

      {% if collection_handle != blank %}
        {%- for product in collection_handle.products limit: products_to_show -%}


          <div class="featured-collection__item" {{ block.shopify_attributes }}>

            {% render 'prduct-card-custom' , product: product  %}


        
          </div>
        {%- endfor -%}
      {% endif %}

      {%- if collection_handle == empty -%}
        {%- for i in (1..8) -%}
          {% capture j %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}

          {% assign product_card = 'product-' | append: j %}
          {% assign image_demo = product_card | placeholder_svg_tag: 'product-svg-image light-bg' %}

          <div class="featured-collection__item" {{ block.shopify_attributes }}>
            <div class="prduct-card">
              <div class="prduct-card__img-wrap">
     
                  <a href="javascript:void(0)">
                    {{ image_demo }}
                  </a>
         
              </div>
              <div class="prduct-card__info">
              
                  <div class="prduct-card__reviews">

                       <span><svg width="79" height="17" viewBox="0 0 79 17" fill="none" xmlns="http://www.w3.org/2000/svg">
