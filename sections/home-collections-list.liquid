{%- assign full_width = section.settings.full_width -%}

{% if section.blocks.size == 0 and section.settings.title == blank and section.settings.sub_title == blank %}
{%- assign section_onboarding = true -%}
{% else %}
{%- assign section_onboarding = false -%}
{% endif %}

{% if section.settings.use_background_img and section.settings.background_img != blank %}
{%- assign img_src = section.settings.background_img -%}
{% include 'image-background-src' %}
{%- assign size = 300 -%}
{%- assign img_size = '1x' -%}
{% endif %}

<div data-section-id="{{ section.id }}" 
     data-section-type="home-collections-list" 
     class="{% if full_width and section.settings.include_color != 'color-none' %}background-colored {{ section.settings.include_color }} {% if section.settings.title != blank or section.settings.sub_title != blank or section.settings.use_background_img %}{% unless section.blocks.size == 0 %}colored-bottom{% endunless %}{% else %}{% if section.blocks.size > 0 %}colored-top-bottom{% else %}{% unless section.blocks.size == 0 %}colored-bottom{% endunless %}{% endif %}{% endif %}{% endif %}{% if section.settings.include_color == 'color-none' %} {% if section.settings.title != blank or section.settings.sub_title != blank or section.settings.use_background_img %}{% unless section.blocks.size == 0 %}margins-bottom-section{% endunless %}{% else %}{% if section.blocks.size > 0 %}margins-section{% else %}{% unless section.blocks.size == 0 %}margins-bottom-section{% endunless %}{% endif %}{% endif %}{% endif %} {% if settings.animation_enable %}animate-section-div {% endif %}clearfix">

  {% if section_onboarding or section.settings.title != blank or section.settings.sub_title != blank or section.settings.use_background_img %}
  <div class="{% if full_width %}{% if section_onboarding or section.settings.use_background_img and section.settings.background_img == blank %}placeholder-svg-background {% endif %}background-cover lazyload {% if section.blocks.size > 0 and section.settings.use_background_img or section_onboarding %}bottompad {% endif %}{% endif %}{% if section.settings.font_color and section.settings.include_color != 'color-none' or section.settings.use_background_img %}white{% endif %} clearfix"
       {% if full_width and section.settings.use_background_img and section.settings.background_img != blank %} 
       data-bgset="{{ image_data | strip }}"
       data-sizes="auto"
       style="background:url(data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7) center center no-repeat;"
       {% endif %}>
    {% if full_width and section.settings.use_background_img and section.settings.background_img != blank %}
    <noscript>
      <div class="no-js-bg background-cover content-height-{{ section.id }}" style="background:url({{ img_src | img_url: '1900x' }}) center center no-repeat;"></div>
    </noscript>
    {% endif %}
    <div{% if full_width and section.settings.use_background_img %} class="background-overlay background-overlay-{{ section.id }}"{% endif %}>
      <div class="container clearfix">
        <div{% unless full_width %}{% if section.settings.use_background_img or section.settings.include_color != 'color-none' %} class="twelve"{% endif %}{% endunless %}>
          <div{% if full_width == false and section.settings.include_color != 'color-none' %} class="tab-body background-colored {{ section.settings.include_color }}{% unless section.settings.use_background_img %}{% if full_width == false %} twelve{% endif %}{% endunless %}"{% endif %}>
            <div class="{% if full_width == false %}{% if section.settings.use_background_img %}background-cover lazyload {% if section.blocks.size > 0 %}bottompad {% endif %}{% endif %}{% if section.settings.use_background_img and section.settings.background_img == blank %}placeholder-svg-background {% endif %}{% endif %} clearfix"
                 {% if full_width == false and section.settings.use_background_img and section.settings.background_img != blank %} 
                 data-bgset="{{ image_data | strip }}"
                 data-sizes="auto"
                 style="background:url(data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7) center center no-repeat;"
                 {% endif %}>
              {% if full_width == false and section.settings.use_background_img and section.settings.background_img != blank %}
              <noscript>
                <div class="no-js-bg background-cover content-height-{{ section.id }}" style="background:url({{ img_src | img_url: '1200x' }}) center center no-repeat;"></div>
              </noscript>
              {% endif %}
              <div class="table content-height-{{ section.id }}{% if full_width == false and section.settings.use_background_img %} twelve background-overlay background-overlay-{{ section.id }}{% endif %}">
                <div class="table-cell">
                  <div class="twelve {{ section.settings.text_alignment }}">
                    {% if section_onboarding %}
                    <h2>{{ 'homepage.onboarding.collection_no_title' | t }}</h2>
                    <h3>{{ 'homepage.onboarding.no_body' | t }}</h3>
                    {% else %}
                    {% if section.settings.title != blank%}<h2>{{ section.settings.title | escape }}</h2>{% endif %}
                    {% if section.settings.sub_title != blank %}<h3>{{ section.settings.sub_title | escape }}</h3>{% endif %}
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>  
  {% endif %}
  <div class="container{% if full_width %}{% if section.settings.use_slider and section.blocks.size > 3 %} no-pad{% else %} grid{% endif %}{% endif %}{% if settings.animation_enable %} animate-section animate-section-margin load{% endif %} clearfix">
    <div{% unless full_width %}{% if section.settings.include_color != 'color-none' %} class="twelve"{% endif %}{% endunless %}>  
      <div class="tab-body{% if full_width == false and section.settings.include_color != 'color-none' %} background-colored {{ section.settings.include_color }} {% if section.settings.title != blank or section.settings.sub_title != blank or section.settings.use_background_img %}colored-bottom{% else %}colored-top-bottom{% endif %}{% unless section.settings.use_slider and section.blocks.size > 3 %} twelve{% if section.blocks.size > 2 %} grid{% endif %}{% endunless %}{% elsif full_width == false and section.blocks.size > 2 %}{% if section.settings.use_slider and section.blocks.size > 3 %} twelve{% else %} plus-grid{% endif %}{% elsif full_width and section.blocks.size < 3 %} plus-grid{% endif %}">
        <div data-section-id="{{ section.id }}" class="{% if section.blocks.size > 2 %}swiper-container swiper-enabled {% if section.settings.use_slider and section.blocks.size > 3 %}plus-slider {% elsif section.blocks.size > 2 %}plus-slider-grid {% endif %}{% endif %}product-loop{% if section.blocks.size < 3 %} center twelve swiper-product{% endif %} text-center"{% if section.blocks.size > 2 %} id="swiper-carousel-{{ section.id }}{% unless section.settings.use_slider and section.blocks.size > 3 %}-grid{% endunless %}"{% endif %}>
          {% if section.blocks.size > 2 %}<div class="swiper-wrapper swiper-wrapper-{{ section.id }}{% if section.blocks.size < 4 %} swiper-center{% endif %}{% unless section.settings.use_slider and section.blocks.size > 3 %} flex-wrap{% endunless %}">{% endif %}
          {% for block in section.blocks %}
          {%- assign collection = collections[block.settings.collection] -%}          
          {%- capture current -%}{% cycle 1, 2, 3, 4, 5, 6 %}{%- endcapture -%}          
          {%- capture current_cycle -%}cycle-{{ section.id }}{%- endcapture -%}

          {%- assign block_width = section.blocks.size | downcase -%}
          {% case block_width %}
          {% when '1','2','3','4','8' %}
          {%- assign block_width = 'three' -%}     
          {%- assign size = 300 -%}
          {% when '5' %}
          {%- assign block_width = 'two-half' -%}      
          {%- assign size = 600 -%}
          {% when '6' %}
          {%- assign block_width = 'four' -%}      
          {%- assign size = 400 -%}
          {% when '10' %}
          {%- assign block_width = 'two-half' -%}      
          {%- assign size = 220 -%}
          {% endcase %}
          
          <div class="product animate swiper-slide{% if section.settings.use_slider %} three{% else %} {% if section.blocks.size == 7 %}{% cycle cycleIndex: 'three', 'three', 'three', 'three', 'four', 'four', 'four' %}{%- assign size = 600 -%}{% elsif section.blocks.size == 9 %}{% cycle cycleIndex: 'two-half', 'two-half', 'two-half', 'two-half', 'two-half', 'three', 'three', 'three', 'three' %}{%- assign size = 300 -%}{% else %}{{ block_width }}{% endif %} animate-loop-{{ forloop.index0 }}{% endif %}" {{ block.shopify_attributes }}>
            <div class="product-thumb">
              {% if collection == empty %}
              <a href="{{ routes.all_products_collection_url }}">
                {{ 'collection-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
              </a>
              {% else %}
              <a href="{{ collection.url  }}" title="{{ collection.title }}">
                {% if section.settings.use_product_image %}
                {%- assign img_src = collection.products.first.featured_media -%}
                {% else %}
                {% if collection.image %}
                {%- assign img_src = collection.image -%}
                {% else %}
                {%- assign img_src = collection.products.first.featured_media -%}
                {% endif %}
                {% endif %}

                {% if section.settings.image_fit =='contain' %}
                {%- assign bg_size = 'contain' -%}
                {% else %}
                {%- assign bg_size = 'cover' -%}
                {% endif %} 

                {%- assign img_size = '1x' -%}
                <div class="lazypadding ">
                  {% include 'image-background' %}
                </div>
              </a>
              {% endif %}
            </div>
            <div class="product-details">
              <div class="product-title collection">
                <h5>
                  {% if collection == empty %}       
                  <a href="{{ routes.all_products_collection_url }}">
                    {{ 'homepage.onboarding.collection_title' | t }}
                  </a>
                  {% else %}
                  <a href="{{ collection.url}}" title="{{ collection.title }}">
                    {{ collection.title }}
                  </a>
                  {% endif %}
                </h5>
              </div>
            </div>
          </div>
          {% endfor %}
          {% if section.blocks.size > 2 %}</div>{% endif %}
          {% if section.blocks.size > 2 %}
          <div id="swiper-pagination-{{ section.id }}" class="swiper-pagination relative hidden">
            <div id="swiper-button-prev-{{ section.id }}" class="swiper-button-prev icon icon-chevron-left" role="button" aria-label="{{ 'products.general.previous' | t }}"></div>
            <div id="swiper-button-next-{{ section.id }}" class="swiper-button-next icon icon-chevron-right" role="button" aria-label="{{ 'products.general.next' | t }}"></div>
          </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
  
</div>

<style> 
  .content-height-{{ section.id }}{height:{{ section.settings.padding }}vh;min-height:{{ section.settings.padding }}vh}
  {% if section.settings.background_img_overlay != blank %}{%- assign alpha = section.settings.background_img_overlay_opacity | times: 0.01 -%}.background-overlay-{{ section.id }}{background:{{ section.settings.background_img_overlay |  color_modify: 'alpha', alpha }};}{% endif %}
</style>

{% schema %}
  {
    "name": "Collection list",
	"max_blocks": 10,
    "settings": [
      {
        "type": "header",
        "content": "Banner"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
		"default": "Collection list"
      },
      {
        "type": "text",
        "id": "sub_title",
        "label": "Subheading",
		"default": "Group collections that have a common interest"
      },
      {
        "type": "select",
        "id": "text_alignment",
        "label": "Alignment",
        "default": "text-center",
        "options": [
          {
            "value": "text-left",
            "label": "Left"
          },
          {
            "value": "text-center",
            "label": "Center"
          },
          {
            "value": "text-right",
            "label": "Right"
          }
        ]
      },
      {
        "type": "image_picker",
        "id": "background_img",
        "label": "Image",
        "info": "1900px recommended"
      },
      {
        "type": "checkbox",
        "id": "use_background_img",
        "label": "Show image",
        "default": false
      }, 
      {
        "type": "checkbox",
        "id": "font_color",
        "label": "White text",
        "default": true
      },
	  {
       "type": "checkbox",
       "id": "full_width",
       "label": "Full width",
       "default": true
      },
      {
        "type": "range",
        "id": "padding",
        "min": 5,
        "max": 100,
        "step": 5,
        "unit": "%",
        "label": "Height",
        "default": 25
      },
	  {
        "type": "color",
        "id": "background_img_overlay",
        "label": "Overlay"
      },
      {
        "type": "range",
        "id": "background_img_overlay_opacity",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "%",
        "label": "Opacity",
        "default": 0
      },
	  {
        "type": "select",
        "id": "include_color",
        "label": "Background color",
        "default": "color-none",
        "options": [
          {
            "value": "color-primary",
            "label": "Primary"
          },
          {
            "value": "color-secondary",
            "label": "Secondary"
          },
          {
            "value": "color-none",
            "label": "None"
          }
        ]
      },
      {
        "type": "header",
        "content": "Options"
      },
      {
        "type": "checkbox",
        "id": "use_slider",
        "label": "Use slider for collections",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "use_product_image",
        "label": "Show first product image",
        "default": true
      },
      {
        "type": "select",
        "id": "image_fit",
        "label": "Image fit",
        "default": "contain",
        "options": [
          {
            "value": "cover",
            "label": "Fill space"
          },
          {
            "value": "contain",
            "label": "Fit to space"
          }
        ]
      }
    ],
    "blocks": [
      {
        "type": "collection",
        "name": "Collection",
        "settings": [
          {
            "type": "collection",
            "id": "collection",
            "label": "Collection"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Collection list",
        "category": "Collection",
        "blocks": [
          {
            "type": "collection"
          },
          {
            "type": "collection"
          },
          {
            "type": "collection"
          },
          {
            "type": "collection"
          },
          {
            "type": "collection"
          }
        ]
      }
    ]
  }
{% endschema %}