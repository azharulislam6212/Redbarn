                          {% when 'Long Lasting' %}
                          {% assign tag_img_src  = 'https://cdn.shopify.com/s/files/1/0508/4767/8644/files/Web_Icons_1_Long_Lasting.png?v=1689962755' %}
                          {% when 'Microbiome Health' %}
