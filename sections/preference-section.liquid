                          {% when 'Made in the USA' %}
                          {% assign tag_img_src  = 'https://cdn.shopify.com/s/files/1/0508/4767/8644/files/Web_Icons_1_MIUSA_1.png?v=1689962755' %}
                          {% when 'Made in USA' %}
                          {% assign tag_img_src  = 'https://cdn.shopify.com/s/files/1/0508/4767/8644/files/MadeinUSA-140pX140p-082819.png?v=1609937482' %}
                          {% when 'No Artificial Anything' %}
                          {% assign tag_img_src  = 'https://cdn.shopify.com/s/files/1/0508/4767/8644/files/Web_Icons_1_No_Artificial_1.png?v=1689962755' %}
                          {% when 'Boredom-Buster' %}
                          {% assign tag_img_src  = 'https://cdn.shopify.com/s/files/1/0508/4767/8644/files/boredom-busting.svg?v=1607957429' %}
                          {% when 'Single Ingredient' %}
