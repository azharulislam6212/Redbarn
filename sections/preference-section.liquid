                          {% when 'Great for Training' %}
                          {% assign tag_img_src  = 'https://cdn.shopify.com/s/files/1/0508/4767/8644/files/Web_Icons_1_Training.png?v=1694816747' %}   
                    
                          
                          {% endcase %}
                    
                          <div class='preference_icon'>
                            {% if tag_img_src != blank %}
                            <span class="grain-ico">
                              <img src="{{tag_img_src}}" alt="{{tag_name}}" />
                            </span>
                            {% endif %}
                            <h6>{{tag_name}}</h6>
                          </div>
                    
                    
                          {% endif %}
                    
