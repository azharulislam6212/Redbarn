{% if section.settings.bg_color != blank %}
<style>
  #homepage-pet-need-{{ section.id }}  {
    background-color: {{ section.settings.bg_color }};
  }
</style>
{% endif %}


{% schema %}
  {
    "name": "Pet need",
    "settings": [
	{
		"type":"color",
		"id":"bg_color",
		"label":"Background Color",
		"default": "#fff"
		},
		{
		"type":"text",
		"id":"title",
		"label":"Title"
		},
		{
		"type":"text",
		"id":"button_text",
		"label":"Button text"
		},
		{
		"type":"url",
		"id":"button_link",
		"label":"Button Link"
		}
	]
  }
{% endschema %}
