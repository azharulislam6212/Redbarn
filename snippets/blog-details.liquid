<h3> class="blog-title"><a href="{{ article.url }}" title="{{ article.title }}">{{ article.title }}</a> </h3>

{% if section.settings.include_author or section.settings.include_date or blog.comments_enabled? and article.comments.size > 0 %}
<h4> class="blog-data">{% if section.settings.include_author %}{{ article.author }}{% endif %}{% if section.settings.include_author and section.settings.include_date %}<span class="separator" aria-hidden="true"></span>{% endif %}{% if section.settings.include_date %}{{ article.published_at | date: settings.month_day_year }}{% endif %}{% if blog.comments_enabled? and article.comments.size > 0 %}{% if section.settings.include_author or section.settings.include_date %}<span class="separator" aria-hidden="true"></span>{% endif %}<a href="{{ article.url }}#comments" title="{{ 'blogs.comments.comments' | t }}">{{ article.comments_count }} {{ article.comments_count | pluralize: 'comment','comments' }}</a>{% endif %}</h4>
{% endif %}

<div class="blog-content">
  {% if article.excerpt.size > 0 %}
  <div class="article-excerpt blog-home clearfix"><p>{{ article.excerpt | strip_html }}</p></div>
  {% else %}
  <p>{{ article.content | strip_html | truncatewords: 50 }}</p>
  {% endif %}
</div> 

{% if article.tags.size > 0 and section.settings.include_tags %}
<div class="bottompad">
  <h5> class="blog-data blog-tags">
    {{ 'blogs.article.tags' | t }}
    {% for tag in article.tags %} 
    <a href="{{ blog.url }}/tagged/{{ tag | handle }}" title="Tags">{{ tag }}</a>{% unless forloop.last %}, {% endunless %}
    {% endfor %}
  </h5>  
</div>
{% endif %}

<div class="blog-read-more clearfix">
  <a class="btn outline auto-width" href="{{ article.url }}" title="{{ article.title }}">{{ 'blogs.article.read_more' | t }}</a>
</div>