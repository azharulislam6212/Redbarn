<div class="container bottompad-section clearfix">
  <div class="twelve">
    <h1>{{ 'customer.activate_account.title' | t }}</h1>
    {% include "breadcrumbs" %}
    <p>{{ 'customer.activate_account.subtext' | t }}</p>
  </div>
  <div class="six">

    {% form 'activate_customer_password' %}
    {{ form.errors | default_errors }}

    <span id="password" class="form">
      <label for="customer_password">{{ 'customer.activate_account.password' | t }}</label>
      <input type="password" value="" name="customer[password]" id="customer_password" placeholder="{{ 'customer.activate_account.password' | t }}" />
    </span>

    <span id="password_confirm" class="form">
      <label for="customer_password_confirmation">{{ 'customer.activate_account.password_confirm' | t }}</label>
      <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" placeholder="{{ 'customer.activate_account.password_confirm' | t }}" />
    </span>

    <span>
      <button class="btn" type="submit">{{ 'customer.activate_account.submit' | t }}</button><input type="submit" class="cancel account-secondary" name="decline" id="customer_decline" value="{{ 'customer.activate_account.cancel' | t }}" />      
    </span>
    {% endform %}
  </div>
</div>