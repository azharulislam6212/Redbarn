<div class="container clearfix">
  
  <div class="twelve"><h1>{{ 'customer.register.title' | t }}</h1>
  {% include "breadcrumbs" %}
  </div>
  
  <div class="six bottompad-section clearfix">

    {% form 'create_customer' %}
    {{ form.errors | default_errors }}

    
    <div class="form-group" id="first_name">
      <div class="form-label">
        <span class="wpcf7-form-control-wrap">
          <input autofocus type="text" required name="customer[first_name]"  {% if form.first_name %}value="{{ form.first_name }}"{% endif %} autocapitalize="words"  class="form-control"
                 id="first_name" data-empty="true">
          <label for="first_name">{{ 'customer.register.first_name' | t }}</label>
        </span>
      </div>
    </div>

    <div class="form-group" id="last_name">
      <div class="form-label">
        <span class="wpcf7-form-control-wrap">
          <input  type="text" required name="customer[last_name]"  {% if form.last_name %}value="{{ form.last_name }}"{% endif %} autocapitalize="words"  class="form-control"
                 id="last_name" data-empty="true">
          <label for="last_name">{{ 'customer.register.last_name' | t }}</label>
        </span>
      </div>
    </div>
    

    <div class="form-group" id="email">
      <div class="form-label">
        <span class="wpcf7-form-control-wrap">
          <input  type="email" required name="customer[email]"  {% if form.email %}value="{{ form.email }}"{% endif %} autocapitalize="off"  autocorrect="off" class="form-control"
                 id="email" data-empty="true">
          <label for="email">{{ 'customer.register.email' | t }}</label>
        </span>
      </div>
    </div>

    <div class="form-group" id="password">
      <div class="form-label">
        <span class="wpcf7-form-control-wrap">
          <input  type="password" required name="customer[password]"  {% if form.password %}value="{{ form.password }}"{% endif %}  class="form-control"
                 id="password" data-empty="true">
          <label for="password">{{ 'customer.register.password' | t }}</label>
        </span>
      </div>
    </div>


    <span class="form">
      <input type="hidden" name="customer[accepts_marketing]" value="" aria-hidden="true" tabindex="-1"/>
      <input type="checkbox" name="customer[accepts_marketing]" checked="checked" />
      {{ 'customer.register.subscribe' | t }}
    </span>

    <span>
      <button class="btn" type="submit">{{ 'customer.register.submit' | t }}</button>
    </span>
    {% endform %}

  </div>
  <div class="guest-login five right bottompad-section clearfix">
    <h3>{{ 'customer.register.login' | t }}</h3>
    <p>{{ 'customer.register.login_subtext' | t }}</p>
    <a class="btn" title="{{ 'customer.register.login_subtext' | t }}" href="{{ routes.account_login_url }}">{{ 'customer.register.login_submit' | t }}</a>
  </div>
</div>